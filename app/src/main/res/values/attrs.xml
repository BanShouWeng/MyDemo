<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--手势解锁-->
    <attr name="color_no_finger_inner_circle" format="color" />
    <attr name="color_no_finger_outer_circle" format="color" />
    <attr name="color_finger_on" format="color" />
    <attr name="color_finger_up" format="color" />
    <attr name="count" format="integer" />
    <attr name="try_times" format="integer" />
    <attr name="reset_time" format="integer" />
    <attr name="line_width_percent" format="integer" />
    <attr name="line_alpha" format="integer" />
    <attr name="lock_width_percent" format="integer" />
    <attr name="margin_between_lock_view_percent" format="integer" />

    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" />
        <attr name="color_no_finger_outer_circle" />
        <attr name="color_finger_on" />
        <attr name="color_finger_up" />
        <attr name="count" />
        <attr name="try_times" />
        <attr name="reset_time" />
        <attr name="line_width_percent" />
        <attr name="line_alpha" />
        <attr name="lock_width_percent" />
        <attr name="margin_between_lock_view_percent" />
    </declare-styleable>

    <!--hint图片居中的EditText-->
    <declare-styleable name="CenterImgHintTextView">
        <attr name="image_width" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <!--截图参数定义-->
    <declare-styleable name="CropImage">
        <attr name="horizontal_crop" format="dimension" />
        <attr name="vertical_crop" format="dimension" />
        <attr name="horizontal_crop_percent" format="float" />
        <attr name="vertical_crop_percent" format="float" />
    </declare-styleable>

    <!--背景涟漪-->
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
    </declare-styleable>

    <!--地震波-->
    <declare-styleable name="waveStyle">
        <attr name="wave_color" format="color" />
        <attr name="wave_num" format="integer" />
        <attr name="circle_padding" format="dimension" />
        <attr name="wave_speed" format="integer|enum">
            <enum name="slow" value="0" />
            <enum name="slightly_slower" value="-1" />
            <enum name="medium" value="-2" />
            <enum name="slightly_faster" value="-3" />
            <enum name="fast" value="-4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingStatusView">
        <attr name="progress_width" format="dimension" />
        <attr name="progress_radius" format="dimension" />
        <attr name="result_with_circle" format="boolean" />
        <attr name="loading_color" format="color" />
        <attr name="load_success_color" format="color" />
        <attr name="load_failure_color" format="color" />
    </declare-styleable>
</resources>
